<div class="col-12 col-md-6 col-lg-5 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Edit Note</h3>
    </div>
    <div class="card-body">
      <form class="form" action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input class="form-control" type="text" name="title" value="{{note.title}}" placeholder="Title" autofocus>
        </div>
        <div class="form-group">
          <textarea name="description" placeholder="Description" rows="3" class="form-control" >{{note.description}}</textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn rounded-pill btn-primary btn-block">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
