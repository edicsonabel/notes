<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>New Note</h3>
    </div>
    <div class="card-body">
      <form class="form" action="/notes/new-note" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="title" placeholder="Title" autofocus>
        </div>
        <div class="form-group">
          <textarea name="description" placeholder="Description" rows="3" class="form-control"></textarea>
        </div>
        <div class="form-group">
          <button class="btn rounded-pill btn-primary btn-block">Save</button>
        </div>
      </form>
      </div>
    </div>
  </div>
